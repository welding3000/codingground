/* Effecto con el mouse */

.container:hover {
  cursor: pointer;
  transform: rotate(0deg) scale(0.5) translateY(10px); // 1.5
  transition: .5s all ease;
  z-index: 400;
}

// Establecer imagen principal
@mixin image($tp,$lft,$wd,$he) {
  top: $tp;  left: $lft;  width: $wd;  height: $he;  position: $abs;}

.image {
  border-radius: 21px;
  background-image: url('https://codigoespagueti.com/wp-content/uploads/2016/02/CrashBandicoot.jpg');
  opacity: 0.8;
  background-repeat: no-repeat;
  // imagen navegador
  background-size: 300px 350px;
  //  0% ,  0%  , 100% ,  100%    
  @include image( 0%,  0%,  500px,  270px); // top , left , width ,  height 
}

// Este da el color de la parte de abajo de una imagen para seleccionar todos y las words
@mixin story($tp,$lft,$wd,$he,$in) {
  top: $tp;  left: $lft;  width: $wd;  height: $he;  z-index: $in;  position: $abs;
}

.story {
  //  5% , -1%  ,  100%  , 55%   ,30 
  @include story( 5px,  -1px,  800px,  85px,  30); // top , left , width ,  height , index   
}

