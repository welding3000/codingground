/*  Fondo y estilo de letras */

@import url('https://fonts.googleapis.com/css?family=Raleway:200');
body {
  font-family: 'Raleway', sans-serif;
  background: url('http://imagenesdepaisajesnaturales.net/wp-content/uploads/2016/08/fondos-de-pantalla-de-playas-transparente.jpg');
  background-repeat: no-repeat;
  background-size: 100% 20%;
  // background: rgba(161,192,87,0.9 );
}

@mixin model($tp,$lft,$wd,$he) {
  top: $tp;  left: $lft;  width: $wd;  height: $he;
}

@mixin wrapper() {
  position: $abs; // important
  //  10% , 40%  , 300px ,  500px 
  @include model( 80px,
  10px,
  380px,
  1200px); //  top , left , width ,  height 
}

.wrapper {
  @include wrapper();
  perspective: 900px;
  background: rgba(161, 192, 87, 0.9);
}

// produce los effectos de animaccion 
@mixin container($tp,$wd,$he) {
  top: $tp;  width: $wd;  height: $he;  position: $abs;
}

.container {
  transition: .5s all ease;
  transform: rotateX(40deg) scale(0.4); // 
  perspective: 900px;
  box-shadow: 0px 20px 50px #555;
  animation: entry 1s linear 1;
  @include container( 20%,
  100%,
  10%); //   top , width ,  height 
}

